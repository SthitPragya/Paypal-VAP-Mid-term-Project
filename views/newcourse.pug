html
    head
        style
            include newcourse.css
    body
        h1(id="top") Welcome to Registration Portal
        div(id="line")
            p Hello, #{name}
        div(id="inp")
            form(action='/newcourse', method="POST")
                label(for="fname") Course ID
                br
                input(type="text" id="fname" name="courseid" placeholder="Eg. CSE1012")
                br
                br
                label(for="lname") Course Name
                br
                input(type="text" id="lname" name="coursename" placeholder="Course Name")
                br
                br
                input(type="submit" id="logbtn" value="Add Course")