html
    head
        style
            include studentsreg.css
    body
        h1(id="top") Welcome to Registration Portal
        div(id="line")
            p Hello, #{reg}
        div(id="main")
            h1 #{cid} - #{subname}
            table
                tr
                    th S. No.
                    th Teacher ID
                    th Teacher Name
                    th
                - for(i=1;i<=tname.length;i++)
                    tr
                        td #{i}
                        td #{tid[i]}
                        td #{tname[i-1][0]}
                        td
                            a(href=`/studentupdatedb/${reg}/${tid[i]}/${cid}`) Register
        div(id="bottom")
            a(href='/logout' class="btmbtns") Log Out
            a(href='/studentspage' class="btmbtns") Go Back