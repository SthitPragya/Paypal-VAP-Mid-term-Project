html
    head
        style
            include adminstudent.css
    body
        h1(id="top") Welcome to Registration Portal
        div(id="line")
            p Hello, #{name}
        div(id="main")
            h1 Courses
            table
                tr
                    th S. No.
                    th Course ID
                    th Course Name
                    th
                - for(i=1;i<=cid.length;i++)
                    tr
                        td #{i}
                        td #{cid[i-1]}
                        td #{cname[i-1]}
                        td
                            a(href=`/delcourse/${cid[i-1]}`) Delete Course
        div(id="bottom")
            a(href='/logout' class="btmbtns") Log Out
            a(href='/adminspage' class="btmbtns") Go Back
            a(href='/newcourse' class="btmbtns") Add Course