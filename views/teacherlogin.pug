html
    head
        style
            include teacherloginstyle.css
    body
        h1(id="top") Welcome to Registration Portal
        div(id="login")
            h1(style="font-size:3vw") Login for Teachers
            div(id="inp")
                form(action='/teacher' method="POST")
                    label(for="fname") Username
                    br
                    input(type="text" id="fname" name="username" placeholder="Faculty Id")
                    br
                    label(for="lname") Password
                    br
                    input(type="password" id="lname" name="password" placeholder="Password")
                    br
                    br
                    input(type="submit" id="logbtn")
                    p #{message}