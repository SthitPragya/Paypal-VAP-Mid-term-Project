html
    head
        style
            include newteacher.css
    body
        h1(id="top") Welcome to Registration Portal
        div(id="line")
            p Hello, #{name}
        div(id="inp")
            form(action='/newteacher', method="POST")
                label(for="fname") Faculty ID
                br
                input(type="text" id="fname" name="facultyid" placeholder="Eg. 102")
                br
                br
                label(for="lname") Faculty Name
                br
                input(type="text" id="lname" name="facultyname" placeholder="Faculty Name")
                br
                br
                input(type="submit" id="logbtn" value="Add Faculty")