html
    head
        style
            include addcourseteacher.css
    body
        h1(id="top") Welcome to Registration Portal
        div(id="line")
            p Hello, #{nm}
        div(id="main")
            h1 Available Courses
            table
                tr
                    th S. No.
                    th Course ID
                    th Course Name
                - for(i=1;i<=sub.length;i++)
                    tr
                        td #{i}
                        td #{coursesid[i-1]}
                        td #{sub[i-1]}
                        td
                            a(href=`/teachersregcourse/${coursesid[i-1]}`) Add Course
        div(id="bottom")
            a(href='/logout' class="btmbtns") Log Out
            a(href='/teacherspage' class="btmbtns") Go Back