html
    head
        style
            include studentspage.css
    body
        h1(id="top") Welcome to Registration Portal
        div(id="line")
            p Hello, #{course[0]}
        div(id="main")
            h1 Registered Courses
            table
                tr
                    th S. No.
                    th Course ID
                    th Course Name
                    th Faculty
                    th
                - for(i=1;i<course.length;i++)
                    tr
                        td #{i}
                        td #{course[i][0]}
                        td #{cname[i-1]}
                        td #{fname[i-1]}
                        td
                            a(href=`/studentsdelcourse/${reg}/${course[i][0]}`) Remove
        div(id="bottom")
            a(href='/logout' class="btmbtns") Log Out
            a(href='/addcourse' class="btmbtns") Add Course